// stdout:
//   a
//   b
//   c
//   c
export main;

effect NonLocalReturn {
    .a: () -> Bottom,
    .b: () -> Bottom,
    .c: () -> Bottom,
}

fun main() !Io -> Unit {
    print!(handle NonLocalReturn {
        NonLocalReturn.a!()
    } on {
        .a = () {
            exit "a\n"
        },
        .b = () {
            exit "b\n"
        },
        .c = () {
            exit "c\n"
        },
    });

    print!(handle NonLocalReturn {
        NonLocalReturn.b!()
    } on {
        .a = () {
            exit "a\n"
        },
        .b = () {
            exit "b\n"
        },
        .c = () {
            exit "c\n"
        },
    });

    print!(handle NonLocalReturn {
        NonLocalReturn.c!()
    } on {
        .a = () {
            exit "a\n"
        },
        .b = () {
            exit "b\n"
        },
        .c = () {
            exit "c\n"
        },
    });

    // Check that handler order can differ from operation definition order
    print!(handle NonLocalReturn {
        NonLocalReturn.c!()
    } on {
        .a = () {
            exit "a\n"
        },
        .c = () {
            exit "c\n"
        },
        .b = () {
            exit "b\n"
        },
    });
}
